<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ACS_View.MVVM.ViewModels"
             x:DataType="vm:OverallViewModel"
             x:Class="ACS_View.MVVM.Views.OverallView"
             NavigationPage.HasNavigationBar="False"
             Background="#E6EBED">

    <ContentPage.Resources>

        <Style x:Key="infos" TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="borders" TargetType="Border">
            <Setter Property="Stroke" Value="LightGrey"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="BackgroundColor" Value="White"/>
        </Style>

        <Style x:Key="buttons" TargetType="Button">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="buttons2" TargetType="Button">
            <Setter Property="BackgroundColor" Value="AliceBlue"/>
            <Setter Property="BorderColor" Value="LightGray"/>
            <Setter Property="BorderWidth" Value="2"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="20,5,20,5"/>
            <Setter Property="MaximumHeightRequest" Value="60"/>
        </Style>

    </ContentPage.Resources>

    <Grid RowDefinitions="auto,*,auto">


        <Label 
            Grid.Row="0"
            Text="Visão Geral"
            Margin="20,15"
            FontAttributes="Bold"
            TextColor="Black"
            FontSize="25"
            HorizontalOptions="Center"/>

        <ScrollView Grid.Row="1">

            <Grid
                RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
                Margin="20,15,20,20"
                Padding="5"
                RowSpacing="10">

                <!-- total de pessoas -->
                <Border
                    Grid.Row="0"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Total de pessoas: "/>

                        <Label
                            x:Name="Lbl_Total"
                            Style="{StaticResource infos}"
                            Text="{Binding Total}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AITotal"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="0"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Total"
                    Style="{StaticResource buttons}"
                    Grid.Row="0"
                    Command="{Binding GoToPageAsync}"
                    CommandParameter=""/>

                <!-- total de residencias -->
                <Border
                    Grid.Row="1"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Total de residências: "/>

                        <Label
                            x:Name="Lbl_Casas"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalHouses}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AICasas"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="1"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Casas"
                    Style="{StaticResource buttons}"
                    Grid.Row="1"
                    Command="{Binding GoToPageAsync}"
                    CommandParameter="HOUSES"/>

                <!-- total sem residencia -->
                <Border
                    Grid.Row="2"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Sem residência: "/>

                        <Label
                            x:Name="Lbl_SemCasa"
                            Style="{StaticResource infos}"
                            Text="{Binding NoResidence}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AICasa"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="2"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_NoResidence"
                    Style="{StaticResource buttons}"
                    Grid.Row="2"
                    Command="{Binding GoToPageAsync}"
                    CommandParameter="NOHOUSE"/>

                <!-- gestantes -->
                <Border 
                    Grid.Row="3"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Gestantes: "/>

                        <Label
                            x:Name="Lbl_Gestantes"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalGestantes}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIGestantes"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="3"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Gestantes"
                    Style="{StaticResource buttons}"
                    Grid.Row="3"
                    Command="{Binding GoToPageAsync}"
                    CommandParameter="GESTANTE"/>

                <!-- hipertensos -->
                <Border 
                    Grid.Row="4"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Hipertensos: "/>

                        <Label
                        x:Name="Lbl_HAS"
                        Style="{StaticResource infos}"
                        Text="{Binding TotalHipertensos}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIHAS"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="4"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_HAS"
                    Style="{StaticResource buttons}"
                    Grid.Row="4"/>

                <!-- diabeticos -->
                <Border 
                    Grid.Row="5"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Diabéticos: "/>

                        <Label
                        x:Name="Lbl_DB"
                        Style="{StaticResource infos}"
                        Text="{Binding TotalDiabeticos}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIDB"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="5"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_DB"
                    Style="{StaticResource buttons}"
                    Grid.Row="5"/>

                <!-- hipertensos diabeticos -->
                <Border 
                    Grid.Row="6"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Hipertensos diabéticos: "/>

                        <Label
                        x:Name="Lbl_HASDB"
