<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ACS_View.MVVM.ViewModels"
             x:Class="ACS_View.MVVM.Views.AllVisits"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="AliceBlue">

    <Grid RowDefinitions="*,auto">

        <Grid
            Grid.Row="0"
            RowDefinitions="auto,*"
            VerticalOptions="Start">

            <Label
                Grid.Row="0"
                Text="Visitas realizadas"
                TextColor="Black"
                HorizontalOptions="Center"
                FontSize="20"
                FontAttributes="Bold"
                Margin="0,10"/>

            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding VisitsList}"
                ItemsUpdatingScrollMode="KeepLastItemInView"
                VerticalScrollBarVisibility="Never">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="10"
                            Margin="5"
                            StrokeShape="RoundRectangle 10"
                            Stroke="Grey"
                            BackgroundColor="White">

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToHouseCommand}"
                                    CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>

                            <Grid
                                RowDefinitions="*,*,*"
                                ColumnDefinitions="*,auto">

                                <Label
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy  -  HH:mm}'}"
                                    FontSize="14"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"/>

                                <Label
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Text="{Binding Address}"
                                    FontSize="14"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"/>

                                <Label
                                    Grid.Column="0"
                                    Grid.Row="2"
                                    Text="{Binding Description}"
                                    FontSize="14"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"/>

                                <ImageButton
                                    Grid.Column="1"
                                    Grid.RowSpan="3"
                                    Source="bin"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteVisit}"
                                    CommandParameter="{Binding Id}" />

                            </Grid>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <VerticalStackLayout
            Grid.Row="1"
            VerticalOptions="End"
            Margin="0,20">

            <Label
                Text="SugestÃµes de visitas"
                TextColor="Black"
                HorizontalOptions="Center"
                FontSize="20"
                FontAttributes="Bold"
                Margin="0,10"/>

            <CarouselView
                ItemsSource="{Binding HouseList}"
                PeekAreaInsets="0"
                IsBounceEnabled="True"
                IsSwipeEnabled="True">

                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="10"
                            Margin="10"
                            StrokeShape="RoundRectangle 10"
                            Stroke="Grey"
                            BackgroundColor="White">

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToHouseCommand}"
                                    CommandParameter="{Binding CasaId}" />
                            </Border.GestureRecognizers>

                            <VerticalStackLayout>
                                <HorizontalStackLayout Spacing="10">

                                    <Label
                                        Text="{Binding Rua}"
                                        VerticalOptions="Center"
                                        FontSize="14"
                                        TextColor="Black"
                                        LineBreakMode="WordWrap"/>

                                    <Label
                                        Text="{Binding NumeroCasa}"
                                        VerticalOptions="Center"
                                        FontSize="14"
                                        TextColor="Black"/>

                                </HorizontalStackLayout>

                                <Label
                                    Text="{Binding Complemento}"
                                    IsVisible="{Binding PossuiComplemento}"
                                    VerticalOptions="Center"
                                    FontSize="14"
                                    TextColor="Gray"/>

                            </VerticalStackLayout>

                        </Border>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

        </VerticalStackLayout>

    </Grid>
    
</ContentPage>