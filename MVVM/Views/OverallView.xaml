                    Style="{StaticResource buttons}"
                    Grid.Row="7"/>

                <!-- tuberculose -->
                <Border 
                    Grid.Row="8"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Tuberculosos: "/>

                        <Label
                        x:Name="Lbl_TB"
                        Style="{StaticResource infos}"
