                    Grid.Row="9"/>

                <!-- domiciliados -->
                <Border 
                    Grid.Row="10"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Domiciliados: "/>

                        <Label
                        x:Name="Lbl_Domiciliados"
