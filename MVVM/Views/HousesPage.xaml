<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ACS_View.MVVM.ViewModels"
             x:Class="ACS_View.MVVM.Views.HousesPage"
             NavigationPage.HasNavigationBar="False"
             Background="#E6EBED">

    <ContentPage.BindingContext>
        <vm:HousesPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid RowDefinitions="auto,*,auto,auto" RowSpacing="10" Margin="10">

            <Grid ColumnDefinitions="*,auto" Grid.Row="0">
                
                <!-- Barra de pesquisa -->
                <Image
                    Grid.Column="0"
                    Source="loupe.png"
                    HeightRequest="19"
                    WidthRequest="19"
                    HorizontalOptions="Start"
                    Margin="21,0,0,0"/>

                <SearchBar
                    Grid.Column="0"
                    Placeholder="Buscar..."
                    PlaceholderColor="Black"                       
                    Text="{Binding SearchText, Mode=TwoWay}"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    TextChanged="SearchBar_TextChanged" />
                
                <!-- Botão de adicionar residência -->
                <ImageButton
                    Grid.Column="1"
                    Source="addHouse.png"
                    BackgroundColor="AliceBlue"
                    HeightRequest="30"
                    WidthRequest="30"
                    Margin="20,0"
                    Command="{Binding NewHouseCommand}"/>
                
            </Grid>

            <!-- Lista de residências -->
            <CollectionView ItemsSource="{Binding Houses}"
                            SelectionMode="None"
                            Grid.Row="1">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Stroke="LightGray"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 8"
                            Padding="10"
                            Margin="0,5">

                            <VerticalStackLayout>

                                <!-- Rua -->
                                <Label Text="{Binding Rua}"
                                       FontSize="18"
                                       Opacity="0.7"
                                       TextColor="Black"
                                       FontAttributes="Bold" />

                                <!-- Número e Complemento -->
                                <HorizontalStackLayout Margin="0,0,0,10">

                                    <Label Text="Número: " FontSize="14" TextColor="Black" Opacity="0.7"/>

                                    <Label Text="{Binding NumeroCasa}" FontSize="14" TextColor="Black" Opacity="0.7" Margin="0,0,20,0"/>

                                    <Label Text="{Binding Complemento}" FontSize="14" TextColor="Black" Opacity="0.7"/>

                                </HorizontalStackLayout>

                                <!-- Botões de ação -->
                                <Grid 
                                    ColumnDefinitions="*,auto,auto"
                                    ColumnSpacing="10">

                                    <Button
                                        Text="Famílias"
                                        TextColor="#0084B1"
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        BorderColor="#0084B1"
                                        BackgroundColor="#E6EBED"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HousesPageViewModel}}, Path=FamilyCommand}"
                                        CommandParameter="{Binding CasaId}" />

                                    <Button
                                        Text="Editar"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        TextColor="DarkOrange"
                                        BorderColor="DarkOrange"
                                        BackgroundColor="AliceBlue"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HousesPageViewModel}}, Path=EditCommand}"
                                        CommandParameter="{Binding CasaId}" />

                                    <Button
                                        Text="Excluir"
                                        Grid.Column="2"
                                        BackgroundColor="White"
                                        FontAttributes="Bold"
                                        TextColor="#C93919"
                                        BorderColor="#C93919"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HousesPageViewModel}}, Path=DeleteCommand}"
                                        CommandParameter="{Binding CasaId}" />

                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botão de voltar -->
            <Button
                Grid.Row="3"
                Text="Voltar"
                BackgroundColor="#0084B1"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Clicked="Btn_Voltar_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
