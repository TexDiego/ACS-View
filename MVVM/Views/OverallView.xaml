                <Button
                    x:Name="Btn_Domiciliados"
                    Style="{StaticResource buttons}"
                    Grid.Row="10"/>

                <!-- menores de 6 anos -->
                <Border
                    Grid.Row="11"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Menores de 6 anos: "/>

                        <Label
                        x:Name="Lbl_Menor6Anos"
                        Style="{StaticResource infos}"
                        Text="{Binding TotalMenores6Anos}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIMENOR"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="11"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Menor6Anos"
                    Style="{StaticResource buttons}"
                    Grid.Row="11"/>

                <!-- psiquiatricos -->
                <Border
                    Grid.Row="12"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                        Style="{StaticResource infos}"
                        Text="Psiquiátricos: "/>

                        <Label
                        x:Name="Lbl_Mental"
                        Style="{StaticResource infos}"
                        Text="{Binding TotalMental}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIMENTAL"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="12"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                        x:Name="Btn_Mental"
                        Style="{StaticResource buttons}"
                        Grid.Row="12"/>

                <!-- fumantes -->
                <Border
                    Grid.Row="13"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                                Style="{StaticResource infos}"
                                Text="Fumantes: "/>

                        <Label
                            x:Name="Lbl_Fumante"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalFumante}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIFUMANTE"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="13"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Fumante"
                    Style="{StaticResource buttons}"
                    Grid.Row="13"/>

                <!-- alcoolatras -->
                <Border
                    Grid.Row="14"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Álcoolatras: "/>

                        <Label
                            x:Name="Lbl_Alcoolatra"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalAlcoolatra}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIALCOOLATRA"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="14"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Alcoolatra"
                    Style="{StaticResource buttons}"
                    Grid.Row="14"/>

                <!-- deficientes -->
                <Border
                    Grid.Row="15"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Deficientes: "/>

                        <Label
                            x:Name="Lbl_Deficiente"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalDeficiente}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIDEFICIENTE"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="15"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Deficiente"
                    Style="{StaticResource buttons}"
                    Grid.Row="15"/>

                <!-- cancer -->
                <Border
                    Grid.Row="16"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Pessoas com câncer: "/>

                        <Label
                            x:Name="Lbl_Cancer"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalCancer}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AICANCER"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="16"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Cancer"
                    Style="{StaticResource buttons}"
                    Grid.Row="16"/>

                <!-- idosos -->
                <Border
                    Grid.Row="17"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Idosos: "/>

                        <Label
                            x:Name="Lbl_Idoso"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalOld}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIOLD"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="17"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Old"
                    Style="{StaticResource buttons}"
                    Grid.Row="17"/>

                <!-- Bolsa família -->
                <Border
                    Grid.Row="18"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Bolsa Família: "/>

                        <Label
                            x:Name="Lbl_Bolsa"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalBolsaFamilia}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIBOLSA"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="18"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Bolsa"
                    Style="{StaticResource buttons}"
                    Grid.Row="18"/>

                <!-- Cardiacos -->
                <Border
                    Grid.Row="19"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Cardíacos: "/>

                        <Label
                            x:Name="Lbl_Cardiacos"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalHeartDesease}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AICARDIACO"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="19"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Cardiaco"
                    Style="{StaticResource buttons}"
                    Grid.Row="19"/>

                <!-- Renais -->
                <Border
                    Grid.Row="20"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Renais: "/>

                        <Label
                            x:Name="Lbl_Renais"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalKidneyDesease}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIKIDNEY"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="20"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Kidney"
                    Style="{StaticResource buttons}"
                    Grid.Row="20"/>

                <!-- Hepatopatas -->
                <Border
                    Grid.Row="21"
                    Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Hepatopatas: "/>

                        <Label
                            x:Name="Lbl_Hepatopatas"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalLiverDesease}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AILIVER"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="21"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Liver"
                    Style="{StaticResource buttons}"
                    Grid.Row="21"/>

                <!-- Pulmonares -->
