<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ACS_View.MVVM.ViewModels"
             x:Class="ACS_View.MVVM.Views.AddFamilyPage"
             NavigationPage.HasNavigationBar="False"
             Background="#E6EBED">

    <ContentPage.Resources>
        <Style x:Key="Button" TargetType="Button">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BackgroundColor" Value="#0084B1"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="Stroke" Value="LightGray"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BackgroundColor" Value="White"/>
        </Style>
        <Style x:Key="Label" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="auto,auto,*,auto">

        <Label 
            Grid.Row="0"
            Text="Adicionar família"
            Margin="20,10,20,10"
            FontAttributes="Bold"
            TextColor="#0084B1"
            FontSize="30"
            HorizontalOptions="Center"/>
        
        <StackLayout
            Grid.Row="1"
            Margin="20,15,20,20"
            HorizontalOptions="Fill"
            VerticalOptions="Start">

            <Border
                Style="{StaticResource Border}"
                VerticalOptions="Start">
                
                <Grid
                    RowDefinitions="auto,auto,*"
                    Padding="10">

                    <Label
                        Grid.Row="0"
                        FontSize="24"
                        Style="{StaticResource Label}"
                        Text="Indivíduo"/>

                    <Entry
                        x:Name="Entry_Search"
                        Grid.Row="1"
                        FontAttributes="None"
                        MinimumWidthRequest="120"
                        TextChanged="Entry_Search_TextChanged"/>

                    <ScrollView
                        x:Name="Scroll_View_Search"
                        Grid.Row="2"
                        Margin="0,15,0,0"
                        IsVisible="False"
                        MaximumHeightRequest="200">

                        <CollectionView ItemsSource="{Binding PessoasPesquisadas}" ItemsLayout="VerticalList">

                            <CollectionView.ItemTemplate>

                                <DataTemplate>

                                    <Border
                                        HorizontalOptions="Fill"
                                        BackgroundColor="AliceBlue"
                                        Stroke="LightGray"
                                        StrokeShape="RoundRectangle 10"
                                        Margin="0,5,0,0">
                                        
                                        <Grid
                                            ColumnDefinitions="*,40"
                                            HorizontalOptions="Fill"
                                            VerticalOptions="Fill"
                                            Padding="10">

                                            <Label
                                                Grid.Column="0"
                                                TextColor="Black"
                                                Opacity="0.7"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="Start"
                                                VerticalOptions="Center"
                                                LineBreakMode="CharacterWrap"
                                                Text="{Binding Nome}"/>

                                            <ImageButton
                                                Grid.Column="1"
                                                Source="add.png"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                VerticalOptions="Center"
                                                HorizontalOptions="End"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddPersonCommand}"
                                                CommandParameter="{Binding Sus}"
                                                Clicked="ImageButton_Clicked"/>

                                        </Grid>
                                        
                                    </Border>

                                </DataTemplate>
                                
                            </CollectionView.ItemTemplate>
                            
                        </CollectionView>
                        
                    </ScrollView>

                </Grid>
            </Border>
        </StackLayout>

        <ScrollView
            Grid.Row="2">

            <CollectionView
                ItemsSource="{Binding Pessoas}">

                <CollectionView.ItemTemplate>

                    <DataTemplate>

                        <Border
                            Margin="20,5"
                            StrokeShape="RoundRectangle 10"
                            Stroke="LightGray"
                            StrokeThickness="2"
                            Padding="15"
                            BackgroundColor="White">

                            <Grid
                                ColumnDefinitions="*,40">

                                <Label
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    TextColor="Black"
                                    Opacity="0.7"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding Nome}"/>

                                <ImageButton
                                    Source="removeperson.png"
                                    Grid.Column="1"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                    CommandParameter="{Binding Sus}"/>

                            </Grid>
                            
                        </Border>
                        
                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>
                
            </CollectionView>
            
        </ScrollView>

        <VerticalStackLayout Grid.Row="3" Margin="20">

            <Button
                Style="{StaticResource Button}"
                x:Name="Btn_Salvar"
                Text="Salvar"
                Margin="0,0,0,10"
                Command="{Binding SalvarCommand}"/>

            <Button
                Style="{StaticResource Button}"
                x:Name="Btn_Voltar"
                Text="Voltar"
                Clicked="Btn_Voltar_Clicked"/>

        </VerticalStackLayout>

    </Grid>

</ContentPage>