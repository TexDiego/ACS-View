<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ACS_View.MVVM.ViewModels"
             xmlns:models="clr-namespace:ACS_View.MVVM.Models"
             xmlns:services="clr-namespace:ACS_View.MVVM.Models.Services"
             x:DataType="vm:FamiliesViewModel"
             x:Class="ACS_View.MVVM.Views.FamiliesPage"
             Shell.NavBarIsVisible="False"
             Background="#E6EBED">

    <Grid RowDefinitions="auto,*" RowSpacing="10">

        <Grid
            Grid.Row="0"
            VerticalOptions="Start">

            <BoxView
                VerticalOptions="Center"
                HeightRequest="80"
                BackgroundColor="White"
                Opacity="0.8">

                <BoxView.Shadow>
                    <Shadow
                        Radius="50"
                        Brush="White"
                        Offset="0.5,0"
                        Opacity="1"/>
                </BoxView.Shadow>

            </BoxView>

            <Label TextColor="Black"
                   Text="{Binding House}"
                   Opacity="0.7"
                   Margin="60,10,60,0"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"/>

            <ImageButton
                Source="plus"
                HeightRequest="40"
                WidthRequest="40"
                Padding="10"
                x:Name="Btn_AddFamily"
                BackgroundColor="AliceBlue"
                BorderColor="Grey"
                CornerRadius="80"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,0,10,0"
                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddFamilyCommand}"/>

            <ImageButton
                Source="arrowleft.png"
                HeightRequest="40"
                WidthRequest="40"
                Margin="10,0,0,0"
                HorizontalOptions="Start"
                Command="{Binding GoBack}"/>

        </Grid>
        
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Families}"
            VerticalScrollBarVisibility="Never">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="10,5"
                        x:DataType="services:Familia"
                        StrokeThickness="2"
                        Stroke="LightGray"
                        StrokeShape="RoundRectangle 10"
                        Padding="10"
                        BackgroundColor="White">

                        <Grid
                            ColumnDefinitions="*,*,*"
                            RowDefinitions="auto,*,35">

                            <CollectionView
                                Grid.ColumnSpan="3"
                                Grid.Row="0"
                                ItemsSource="{Binding PessoasFamilia}">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>

                                        <Grid x:DataType="models:HealthRecord">

                                            <Label
                                                Text="{Binding Name}"
                                                TextColor="Black"
                                                Opacity="0.7"
                                                FontSize="16"
                                                Margin="0,5"
                                                FontAttributes="Bold"
                                                LineBreakMode="WordWrap"/>

                                            <Button
                                                    x:Name="InfoPopup"
                                                    Grid.Row="0"
                                                    Grid.RowSpan="6"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="Transparent"
                                                    Text=""
                                                    Padding="0"
                                                    Opacity="0.01"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PersonInfo}"
                                                    CommandParameter="{Binding SusNumber}"/>

                                        </Grid>

                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <BoxView
                                    Grid.Row="1"
                                    Grid.ColumnSpan="3"
                                    Margin="0,5"
                                    HorizontalOptions="Fill"
                                    HeightRequest="2"
                                    Color="LightGray"/>

                            <Button
                                    Grid.Column="0"
                                    Grid.Row="2"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"
                                    Padding="10,8"
                                    Text="Visitar"
                                    TextColor="Black"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    ImageSource="writing.png"
                                    BackgroundColor="AliceBlue"
                                    BorderColor="DarkOrange"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.VisitFamilyCommand}" 
                                    CommandParameter="{Binding IdFamily}"/>

                            <Button
                                    Grid.Column="1"
                                    Grid.Row="2"
                                    VerticalOptions="Center" 
                                    ImageSource="pencil.png"
                                    BackgroundColor="AliceBlue"
                                    BorderColor="#0084B1"
                                    Padding="10,8"
                                    Text="Editar"
                                    FontAttributes="Bold"
                                    TextColor="DarkOrange"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditFamilyCommand}" 
                                    CommandParameter="{Binding IdFamily}"/>

                            <Button 
                                    Grid.Column="2"
                                    Grid.Row="2"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    ImageSource="bin.png"
                                    BorderColor="#C93919"
                                    Text="Excluir"
                                    Padding="10,8"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    TextColor="DarkRed"
                                    BackgroundColor="AliceBlue"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteFamilyCommand}" 
                                    CommandParameter="{Binding IdFamily}"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
