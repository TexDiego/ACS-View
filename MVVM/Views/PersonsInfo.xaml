<?xml version="1.0" encoding="utf-8" ?>
<tk:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:ACS_View.MVVM.Models"
    x:Class="ACS_View.MVVM.Views.PersonsInfo"
    Color="Transparent"
    CanBeDismissedByTappingOutsideOfPopup="true">

    <tk:Popup.Resources>
        <ResourceDictionary>
            <local:SUSFormatConverter x:Key="SUSFormatConverter"/>
        </ResourceDictionary>
    </tk:Popup.Resources>
    
    <Border
        BackgroundColor="White"
        Stroke="Grey"
        StrokeShape="RoundRectangle 15"
        StrokeThickness="2"
        Margin="15">

        <VerticalStackLayout x:Name="PopupContent" Padding="15">

            <Label 
                Text="{Binding PersonInfo.Name}"
                LineBreakMode="WordWrap"
                VerticalOptions="Start" 
                HorizontalOptions="Start"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="20"/>

            <BoxView
                HeightRequest="1"
                Color="Black"
                Margin="0,0,0,15"/>

            <Label
                Text="{Binding PersonInfo.SusNumber, Converter={StaticResource SUSFormatConverter}}"
                TextColor="Black"
                FontSize="16"/>

            <!-- Idade -->
            <HorizontalStackLayout>
                
                <Label
                    Text="{Binding PersonInfo.BirthDate, StringFormat='{0:dd/MM/yyyy}'}"
                    TextColor="Black"
                    FontSize="16"/>

                <Label
                    Text=" - "
                    TextColor="Black"
                    FontSize="16"/>

                <Label
                    Text="{Binding PersonInfo.Idade}"
                    TextColor="Black"
                    FontSize="16"/>

            </HorizontalStackLayout>

            <Label
                x:Name="Lbl_endereco"
                TextColor="Black"
                FontSize="16"/>
            
            <Label
                x:Name="Lbl_complemento"
                TextColor="Black"
                FontSize="16"
                FontAttributes="Italic"/>

        </VerticalStackLayout>

    </Border>        
    
</tk:Popup>