                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIHASDB"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="6"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_HASDB"
                    Style="{StaticResource buttons}"
                    Grid.Row="6"/>

                <!-- hanseniase -->
                <Border 
                        Grid.Row="7"
                        Style="{StaticResource borders}">

                    <HorizontalStackLayout>

                        <Label
                            Style="{StaticResource infos}"
                            Text="Hanseníases: "/>

                        <Label
                            x:Name="Lbl_HAN"
                            Style="{StaticResource infos}"
                            Text="{Binding TotalHanseniase}"/>

                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIHAN"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="7"
                    IsRunning="{Binding IsLoading}"/>

                <Button
