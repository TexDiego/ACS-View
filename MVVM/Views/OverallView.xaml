                    </HorizontalStackLayout>

                </Border>

                <ActivityIndicator
                    x:Name="AIACA"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
