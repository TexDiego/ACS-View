                    HorizontalOptions="Center"
                    MaximumHeightRequest="40"
                    MaximumWidthRequest="40"
                    IsVisible="False"
                    Color="#C93919"
                    Grid.Row="24"
                    IsRunning="{Binding IsLoading}"/>

                <Button
                    x:Name="Btn_Addicted"
